@model Models.Todo
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx
@{
    string returnUrl = HttpCtx.HttpContext!.Request.Path + HttpCtx.HttpContext.Request.QueryString;
    string editFormId = $"edit-form-{Model.Id}";
    string borderClass = (Model.Completed == true) ? "border-success" : "border-warning";
    string backgroundClass = (Model.Completed == true) ? "bg-success" : "bg-warning";
}

<div class="card rounded-0 border @borderClass text-start" style="width: 16rem;">
    <div class="card-body @backgroundClass text-dark">
        <div class="card-text fw-medium">
            @await Html.PartialAsync("/Pages/Todos/_Details.cshtml", Model)
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between column-gap-3 p-0 ps-2 align-items-center">
            @if(Model.Completed)
            {
                <span title="Complete"><i class="bi bi-check-square-fill text-success"></i></span>
            }
            else
            {
                <span title="Incomplete"><i class="bi bi-x-square-fill text-danger"></i></span>
            }
            <div class="d-flex justify-content-end column-gap-1 align-items-center">
            <form method="post"
                asp-page="/Todos/Delete"
                asp-route-id="@Model.Id"
                class="d-inline">
                <input value="@returnUrl" type="hidden" name="returnUrl" />
                <button type="submit"
                        class="btn btn-sm btn-outline-danger border-0 rounded-0"
                        title="Delete this todo">
                    <i class="bi bi-trash"></i>
                </button>
            </form>
            

            <a href="#" data-bs-toggle="modal" data-bs-target="#editModal-@Model.Id"
                class="btn btn-sm btn-outline-secondary border-0 rounded-0"
                title="Edit this todo">
                <i class="bi bi-pencil"></i>
            </a>
        </div>
    </div>
</div>

<div class="modal fade text-start" id="editModal-@Model.Id" tabindex="-1" aria-labelledby="editModalLabel-@Model.Id"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel-@Model.Id">Edit Todo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="@editFormId" method="post" asp-page="/Todos/Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@returnUrl">
                    <input value="@returnUrl" type="hidden" name="returnUrl" />
                    @await Html.PartialAsync("~/Pages/Todos/_Form.cshtml", Model)
                </form>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button form="@editFormId" type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
