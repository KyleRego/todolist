@page
@model todolist.Pages.ShoppingLists.IndexModel
@using todolist.Models
@using todolist.Models.ShoppingLists
@{
    ViewData["Title"] = "Shopping Lists";
}

<div class="d-flex gap-3 flex-wrap align-items-center mb-4">
    <h1>Shopping Lists</h1>

    <a class="btn btn-outline-secondary" asp-page="/ShoppingLists/New">
        <i class="bi bi-plus-lg"></i> list
    </a>
</div>

<div class="d-flex gap-3 flex-wrap align-items-center mb-2">
    <h2>Stores</h2>

    <a class="btn btn-outline-secondary" asp-page="/ShoppingLists/Stores/New">
        <i class="bi bi-plus-lg"></i> store
    </a>
</div>

<div class="d-flex flex-wrap gap-3">
@foreach(Store store in Model.Stores)
{
    <div class="card">
        <h3 class="card-header">
            @store.Name
        </h3>
        <div class="card-body">
            <div class="d-flex gap-3 align-items-center justify-content-around">
                <a class="btn btn-sm btn-outline-secondary"
                    asp-page="/ShoppingLists/Stores/Show">
                    items
                </a>
                <a class="btn btn-sm btn-outline-secondary"
                    asp-page="/ShoppingLists/Stores/NewList">
                    <i class="bi bi-plus-lg"></i> list
                </a>
            </div>
        </div>
    </div>
}
</div>